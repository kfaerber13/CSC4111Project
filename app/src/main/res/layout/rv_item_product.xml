<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="0dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#ffffff">

        <LinearLayout
            android:textAlignment="center"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_product_rv"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/cat_food"
                android:background="#00ff0000"
                android:backgroundTint="#00ff0000" />
        </LinearLayout>
        <LinearLayout
            android:background="#00ffffff"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:id="@+id/product_name_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dogs Food"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/product_quantity_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Kg"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/product_price_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.00$"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_cart_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add To Cart"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="15sp"
                android:background="@drawable/btn_curved_green"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>